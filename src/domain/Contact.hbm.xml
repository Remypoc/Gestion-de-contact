<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="domain">

    <class name="Contact" table="CONTACT">

        <id name="id" column="ID">
            <generator class="increment"/>
        </id>

        <property name="firstName" type="string" column="FIRSTNAME"/>
        <property name="lastName" type="string" column="LASTNAME"/>
        <property name="email" type="string" column="EMAIL"/>
        <set name="phones" inverse="true" cascade="persist">
            <key column="id_contact"/>
            <one-to-many class="PhoneNumber"/>
        </set>

        <!-- ContactGroup est le possédant de l'association. Pour sauvegarder, mettre à jour, ou supprimer
        il faut passer par le contactGroup -->
        <set name="books" table="CONTACTINGROUP" inverse="true" lazy="true" cascade="persist">
            <key column="ID_CONTACT"></key>
            <many-to-many class="ContactGroup" column="ID_GROUP"></many-to-many>
        </set>

        <many-to-one name="address" column="REFADDRESS"  not-null="false" cascade="persist"></many-to-one>
    </class>
</hibernate-mapping>
