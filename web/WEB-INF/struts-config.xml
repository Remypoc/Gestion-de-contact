<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <!-- ========== Form beans ============================= -->
    <form-beans>

        <!-- Contact Validation Form -->
        <form-bean name="AddContactValidationForm" type="actionForm.AddContactValidationForm"/>

        <!-- Address Validation Form-->
        <form-bean name="AddAddressValidationForm" type="actionForm.AddAddressValidationForm"/>
        <form-bean name="DeleteAddressValidationForm" type="actionForm.DeleteAddressValidationForm"/>
        <form-bean name="UpdateAddressValidationForm" type="actionForm.UpdateAddressValidationForm"/>
        <form-bean name="SearchAddressValidationForm" type="actionForm.SearchAddressValidationForm"/>

        <!-- PhoneNumber Validation Form-->
        <form-bean name="AddPhoneNumberValidationForm" type="actionForm.AddPhoneNumberValidationForm"/>
        <form-bean name="DeletePhoneNumberValidationForm" type="actionForm.DeletePhoneNumberValidationForm"/>
        <form-bean name="UpdatePhoneNumberValidationForm" type="actionForm.UpdatePhoneNumberValidationForm"/>
        <form-bean name="SearchPhoneNumberValidationForm" type="actionForm.SearchPhoneNumberValidationForm"/>

        <!-- ContactGroup Validation Form -->
        <form-bean name="AddContactGroupValidationForm" type="actionForm.AddContactGroupValidationForm"/>
        <form-bean name="AddContactToGroupValidationForm" type="actionForm.AddContactToGroupValidationForm"/>

        <!--Search contact Validation Form-->
        <form-bean name="SearchContactValidationForm" type="actionForm.search.SearchContactValidationForm"/>

    </form-beans>

    <!-- ========== Forwards =============================== -->
    <action-mappings>

        <action path="/Main" forward="/pages/main.jsp"/>

        <!-- Contact jsp path -->
        <action path="/ContactCreation" forward="/pages/contactCreation.jsp"/>

        <!-- Address jsp path-->
        <action path="/AddressCreation" forward="/pages/addressCreation.jsp"/>
        <action path="/AddressDelete" forward="/pages/addressDelete.jsp"/>
        <action path="/AddressUpdate" forward="/pages/addressUpdate.jsp"/>
        <action path="/AddressSearch" forward="/pages/addressSearch.jsp"/>

        <!-- PhoneNumber jsp path-->
        <action path="/PhoneNumberCreation" forward="/pages/phoneNumberCreation.jsp"/>
        <action path="/PhoneNumberDelete" forward="/pages/phoneNumberDelete.jsp"/>
        <action path="/PhoneNumberUpdate" forward="/pages/phoneNumberUpdate.jsp"/>
        <action path="/PhoneNumberSearch" forward="/pages/phoneNumberSearch.jsp"/>

        <!-- ContactGroup jsp path -->
        <action path="/ContactGroupCreation" forward="/pages/contactGroupCreation.jsp"/>

        <action path="/GroupAddContact"
                type="servletAction.loader.GroupAddContact">
            <forward name="success" path="/pages/contactGroupAddContact.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <!-- Contact Action path -->
        <action path="/AddContact"
                type="servletAction.AddContactAction" name="AddContactValidationForm" scope="request"
                input="/pages/contactCreation.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <!--Contact home manager-->
        <action path="/ContactHome"
                type="servletAction.loader.ContactManager">
            <forward name="success" path="/pages/contact/home.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <!-- Address Action path -->
        <action path="/AddAddress"
                type="servletAction.AddAddressAction" name="AddAddressValidationForm" scope="request"
                input="/pages/addressCreation.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/DeleteAddress"
                type="servletAction.DeleteAddressAction" name="DeleteAddressValidationForm" scope="request"
                input="/pages/addressDelete.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/UpdateAddress"
                type="servletAction.UpdateAddressAction" name="UpdateAddressValidationForm" scope="request"
                input="/pages/addressUpdate.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/SearchAddress"
                type="servletAction.SearchAddressAction" name="SearchAddressValidationForm" scope="request"
                input="/pages/addressSearch.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <!-- PhoneNumber Action path -->
        <action path="/AddPhoneNumber"
                type="servletAction.AddPhoneNumberAction" name="AddPhoneNumberValidationForm" scope="request"
                input="/pages/phoneNumberCreation.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/DeletePhoneNumber"
                type="servletAction.DeletePhoneNumberAction" name="DeletePhoneNumberValidationForm" scope="request"
                input="/pages/phoneNumberDelete.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/UpdatePhoneNumber"
                type="servletAction.UpdatePhoneNumberAction" name="UpdatePhoneNumberValidationForm" scope="request"
                input="/pages/phoneNumberUpdate.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/SearchPhoneNumber"
                type="servletAction.SearchPhoneNumberAction" name="SearchPhoneNumberValidationForm" scope="request"
                input="/pages/phoneNumberSearch.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <!-- ContactGroup action path -->
        <action path="/AddContactGroup"
                type="servletAction.AddContactGroupAction" name="AddContactGroupValidationForm" scope="request"
                input="/pages/contactGroupCreation.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <action path="/AddContactToGroup"
                type="servletAction.AddContactToGroupAction" name="AddContactToGroupValidationForm" scope="request"
                input="/pages/contactGroupAddContact.jsp">
            <forward name="success" path="/pages/success.jsp"/>
            <forward name="error" path="/pages/error.jsp"/>
        </action>

        <!--Search contact-->
        <action path="/SearchContact"
        			  type="servletAction.search.SearchContactAction" name="SearchContactValidationForm" scope="request" input="/pages/contact/home.jsp">
        		  <forward name="success" path="/pages/contact/home.jsp" />
        		  <forward name="error" path="/pages/contact/home.jsp" />
        	  </action>

    </action-mappings>

    <!-- ========== Message file =========================== -->
    <message-resources parameter="resources/Resources"/>

</struts-config>