<?xml version="1.0" encoding="UTF-8"?>
          
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

  <!-- ========== Form beans ============================= -->
  <form-beans>
  
  	<!-- Contact Validation Form -->
	<form-bean name="AddContactValidationForm" type="actionForm.AddContactValidationForm"/>
	
	<!-- Address Validation Form-->
	<form-bean name="AddAddressValidationForm" type="actionForm.AddAddressValidationForm"/>
	<form-bean name="DeleteAddressValidationForm" type="actionForm.DeleteAddressValidationForm"/>
	<form-bean name="UpdateAddressValidationForm" type="actionForm.UpdateAddressValidationForm"/>
	<form-bean name="SearchAddressValidationForm" type="actionForm.SearchAddressValidationForm"/>
	
	<!-- PhoneNumber Validation Form-->
	<form-bean name="AddPhoneNumberValidationForm" type="actionForm.AddPhoneNumberValidationForm"/>
	<form-bean name="DeletePhoneNumberValidationForm" type="actionForm.DeletePhoneNumberValidationForm"/>
	<form-bean name="UpdatePhoneNumberValidationForm" type="actionForm.UpdatePhoneNumberValidationForm"/>
	<form-bean name="SearchPhoneNumberValidationForm" type="actionForm.SearchPhoneNumberValidationForm"/>

	  <!-- ContactGroup Validation Form -->
	  <form-bean name="AddContactGroupValidationForm" type="actionForm.AddContactGroupValidationForm"/>
	  <form-bean name="AddContactToGroupValidationForm" type="actionForm.contactgroup.AddContactToGroupValidationForm"/>

	  <!-- Search ContactGroup Validation Form -->
	  <form-bean name="SearchGroupValidationForm" type="actionForm.search.SearchGroupValidationForm"/>

	  <form-bean name="DeleteContactGroupValidationForm" type="actionForm.contactgroup.DeleteContactGroupValidationForm"/>
	  <form-bean name="SearchContactInGroupValidationForm" type="actionForm.contactgroup.SearchContactInGroupValidationForm"/>

	  <!-- Delete contact from group validation form-->
	  <form-bean name="DeleteContactFromGroupValidationForm" type="actionForm.contactgroup.DeleteContactFromGroupValidationForm"/>

  </form-beans>
	
  <!-- ========== Forwards =============================== -->
  <action-mappings>
  
  	<action path="/Main" forward="/pages/struts/main.jsp" />
  	
  	<!-- Contact jsp path -->
  	<action path="/ContactCreation" forward="/pages/struts/contactCreation.jsp" />
  	
  	<!-- Address jsp path-->
  	<action path="/AddressCreation" forward="/pages/struts/addressCreation.jsp" />
  	<action path="/AddressDelete" forward="/pages/struts/addressDelete.jsp" />
  	<action path="/AddressUpdate" forward="/pages/struts/addressUpdate.jsp" />
  	<action path="/AddressSearch" forward="/pages/struts/addressSearch.jsp" />
  	
  	<!-- PhoneNumber jsp path-->
  	<action path="/PhoneNumberCreation" forward="/pages/struts/phoneNumberCreation.jsp" />
  	<action path="/PhoneNumberDelete" forward="/pages/struts/phoneNumberDelete.jsp" />
  	<action path="/PhoneNumberUpdate" forward="/pages/struts/phoneNumberUpdate.jsp" />
  	<action path="/PhoneNumberSearch" forward="/pages/struts/phoneNumberSearch.jsp" />

	  <!-- ContactGroup jsp path -->
	  <action path="/ContactGroupCreation" forward="/pages/struts/contactGroupCreation.jsp" />

	  <action path="/GroupAddContact"
			  type="servletAction.loader.GroupAddContact">
		  <forward name="success" path="/pages/struts/contactGroupAddContact.jsp" />
		  <forward name="error" path="/pages/struts/error.jsp" />
 	  </action>

	  <!-- Link to display all contact groups -->
	  <action path="/Group"
			  type="servletAction.loader.GroupLoader">
		  <forward name="success" path="/pages/group/home.jsp" />
		  <forward name="error" path="/pages/struts/error.jsp" />
	  </action>

	  <!-- Link to display contact group informations (with update option) -->
	  <action path="/UpdateGroup"
			  type="servletAction.contactgroup.UpdateContactGroupAction">
		  <forward name="success" path="/pages/group/update.jsp" />
		  <forward name="error" path="/pages/struts/error.jsp" />
	  </action>

	  <!-- Search group -->
	  <action path="/SearchGroup"
			  type="servletAction.search.SearchGroupAction" name="SearchGroupValidationForm" scope="request" input="/pages/group/home.jsp">
		  <forward name="success" path="/pages/group/home.jsp" />
		  <forward name="error" path="/pages/group/home.jsp" />
	  </action>

	  <!-- Search contact in group -->
	  <action path="/SearchContactInGroup"
			  type="servletAction.contactgroup.SearchContactInGroupAction" name="SearchContactInGroupValidationForm" scope="request" input="/pages/group/update.jsp">
		  <forward name="success" path="/pages/group/update.jsp" />
		  <forward name="error" path="/pages/group/update.jsp" />
	  </action>

	  <!-- Contact Action path -->
  	<action path="/AddContact" 
		type="servletAction.AddContactAction" name="AddContactValidationForm" scope="request" input="/pages/struts/contactCreation.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<!-- Address Action path -->
	<action path="/AddAddress" 
		type="servletAction.AddAddressAction" name="AddAddressValidationForm" scope="request" input="/pages/struts/addressCreation.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<action path="/DeleteAddress" 
		type="servletAction.DeleteAddressAction" name="DeleteAddressValidationForm" scope="request" input="/pages/struts/addressDelete.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<action path="/UpdateAddress" 
		type="servletAction.UpdateAddressAction" name="UpdateAddressValidationForm" scope="request" input="/pages/struts/addressUpdate.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<action path="/SearchAddress" 
		type="servletAction.SearchAddressAction" name="SearchAddressValidationForm" scope="request" input="/pages/struts/addressSearch.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<!-- PhoneNumber Action path -->
	<action path="/AddPhoneNumber" 
		type="servletAction.AddPhoneNumberAction" name="AddPhoneNumberValidationForm" scope="request" input="/pages/struts/phoneNumberCreation.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<action path="/DeletePhoneNumber" 
		type="servletAction.DeletePhoneNumberAction" name="DeletePhoneNumberValidationForm" scope="request" input="/pages/struts/phoneNumberDelete.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<action path="/UpdatePhoneNumber" 
		type="servletAction.UpdatePhoneNumberAction" name="UpdatePhoneNumberValidationForm" scope="request" input="/pages/struts/phoneNumberUpdate.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>
	
	<action path="/SearchPhoneNumber" 
		type="servletAction.SearchPhoneNumberAction" name="SearchPhoneNumberValidationForm" scope="request" input="/pages/struts/phoneNumberSearch.jsp">
		<forward name="success" path="/pages/struts/success.jsp" />
		<forward name="error" path="/pages/struts/error.jsp" />
	</action>

	  <!-- ContactGroup action path -->
	  <action path="/AddContactGroup"
			  type="servletAction.AddContactGroupAction" name="AddContactGroupValidationForm" scope="request" input="/pages/struts/contactGroupCreation.jsp">
		  <forward name="success" path="/pages/struts/success.jsp" />
		  <forward name="error" path="/pages/struts/error.jsp" />
	  </action>

	  <action path="/AddContactToGroup"
			  type="servletAction.contactgroup.AddContactToGroupAction"
			  name="AddContactToGroupValidationForm"
			  scope="request"
			  input="/pages/group/update.jsp">
		  <forward name="success" path="/UpdateGroup.do" />
		  <forward name="error" path="/UpdateGroup.do" />
	  </action>

	  <!-- ContactGroup Delete -->
	  <action path="/DeleteContactGroup"
			  type="servletAction.contactgroup.DeleteContactGroupAction"
			  name="DeleteContactGroupValidationForm"
			  scope="request" input="/pages/struts/contactGroupCreation.jsp">
		  <forward name="success" path="/Group.do" />
	  </action>

	  <!-- ContactGroup delete contact -->
	  <action path="/DeleteContactFromGroup"
			  type="servletAction.contactgroup.DeleteContactFromGroupAction"
			  name="DeleteContactFromGroupValidationForm"
			  scope="request" input="/pages/group/update.jsp">
		  <forward name="success" path="/UpdateGroup.do" />
		  <forward name="error" path="/UpdateGroup.do" />
	  </action>



  </action-mappings>
  
  <!-- ========== Message file =========================== -->
  <message-resources parameter="resources/Resources" />

</struts-config>